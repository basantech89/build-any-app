{
	"name": "create-app",
	"version": "1.0.0",
	"description": "Create your web application",
	"keywords": [],
	"license": "ISC",
	"author": "Basant Soni",
	"main": "./src/index.ts",
	"scripts": {
		"create-app": "NODE_ENV=development ts-node -T ./src/index.ts",
		"build": "babel src --extensions .js,.ts --out-dir dist",
		"lint": "eslint --ignore-path .gitignore --ext .js,.ts,.tsx .",
		"prettier": "prettier --ignore-path .gitignore \"**/*.+(js|json|ts)\"",
		"format": "npm run prettier -- --write",
		"check-format": "npm run prettier -- --list-different",
		"check-types": "tsc",
		"validate": "npm-run-all --parallel check-types check-format lint build",
		"test": "echo \"Error: no test specified\" && exit 1",
		"prepare": "husky install",
		"postinstall": "sort-package-json",
		"commit": "cz"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-customizable"
		}
	},
	"dependencies": {
		"enquirer": "^2.3.6",
		"yargs": "^17.5.1"
	},
	"devDependencies": {
		"@babel/cli": "^7.18.10",
		"@babel/core": "^7.18.10",
		"@babel/preset-env": "^7.18.10",
		"@babel/preset-typescript": "^7.18.6",
		"@commitlint/cli": "^17.0.3",
		"@types/node": "^18.7.11",
		"@types/yargs": "^17.0.11",
		"@typescript-eslint/eslint-plugin": "^5.34.0",
		"@typescript-eslint/parser": "^5.34.0",
		"commitlint-config-gitmoji": "^2.2.5",
		"cz-customizable": "^6.9.1",
		"eslint": "^8.22.0",
		"eslint-config-prettier": "^8.5.0",
		"husky": "^8.0.0",
		"lint-staged": "^13.0.3",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.7.1",
		"sort-package-json": "^1.57.0",
		"ts-node": "^10.9.1",
		"typescript": "^4.7.4"
	}
}
